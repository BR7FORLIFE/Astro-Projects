---
import type { BasicInfo } from "@/types/Product.ts";
import Cards from "@/components/header/Cards.astro";

interface Props {
  name: string;
  placeholders: string[];
  products: BasicInfo[][];
}

const { name, placeholders, products } = Astro.props as Props;
---

<section>
  <div
    class="inline-flex flex-row-reverse justify-center items-center p-6 relative group"
  >
    <img
      src="./triangule.png"
      alt="triangule icon"
      class="size-5 group-hover:rotate-180"
    />
    <span class="font-mono font-medium text-white/90">{name}</span>
    <article
      class="w-auto flex flex-row gap-10 absolute left-9 bg-transparent border-2 border-gray-700 p-4
         opacity-0 pointer-events-none translate-y-2 transition-all duration-500 ease-in-out
         group-hover:opacity-100 group-hover:pointer-events-auto group-hover:translate-y-80 group-hover:flex"
    >
      {
        placeholders.map(
          (placeholder, index) =>
            products[index] && (
              <Cards placeholder={placeholder} products={products[index]} />
            )
        )
      }
    </article>
  </div>
</section>
