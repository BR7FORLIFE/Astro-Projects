---
import SelectInfo from "@/components/header/SelectInfo.astro";

import {
  productsInfoSelectOne,
  productsInfoSelectTwo,
  solutionsInfoSelectOne,
} from "@/scripts/Products.js";
---

<header class="w-full h-auto py-3 px-4 flex flex-col">
  <section class="relative w-full h-auto mb-5">
    <div class="w-full h-auto inline-flex justify-center items-center gap-3">
      <picture class="absolute w-full"
        ><img
          src="./headerimage.svg"
          alt="background for the secction"
          class="w-full h-8 bg-cover"
        /></picture
      >
      <span class="text-white text-center text-sm font-mono font-medium"
        >You can build Laravel apps from a prompt using app.build, our open -
        source full - stack agent</span
      >
      <img
        src="./triangule.png"
        alt="triangule icon"
        class="size-5 transform rotate-270"
      />
    </div>
  </section>

  <section class="flex flex-row gap-20 items-center">
    <picture class="size-auto ml-12"
      ><img src="neon-icon.svg" alt="neon icon" /></picture
    >
    <SelectInfo
      name="Products"
      placeholders={["DATABASE", "ECOSYSTEM"]}
      products={[productsInfoSelectOne, productsInfoSelectTwo]}
    />

    <SelectInfo 
      name="Solutions"
      placeholders={["USE CASE", "FOR TEAMS"]}
      products={[productsInfoSelectOne]}
    />
  </section>
  <nav></nav>
</header>
