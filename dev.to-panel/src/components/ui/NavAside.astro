  {
    imageUrl: "src/assets/images/nav-aside/devc++.svg",
    slug: "DEV++",
  },
  {
    imageUrl: "src/assets/images/nav-aside/video.svg",
    slug: "Videos",
  },
  {
    imageUrl: "src/assets/images/nav-aside/dev-education.svg",
    slug: "DEV Education Tracks",
  },
  {
    imageUrl: "src/assets/images/nav-aside/dev-challenge.svg",
    slug: "DEV Challenges",
  },
  {
    imageUrl: "src/assets/images/nav-aside/dev-help.svg",
    slug: "DEV Help",
  },
  {
    imageUrl: "src/assets/images/nav-aside/advertise.svg",
    slug: "Advertise on DEV",
  },
  {
    imageUrl: "src/assets/images/nav-aside/organization.svg",
    slug: "Organization Accounts",
  },
  {
