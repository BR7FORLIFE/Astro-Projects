---
import { courses } from "../data/Course.js";
---

<section
  class="w-full max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-2 gap-10 mt-32 text-white"
>
  {
    courses.map(({ id, titulo, descripcion, nivel, duracion, imagen }) => (
      <div class="flex flex-col items-center gap-3 bg-gradient-to-tr from-slate-800 to-gray-400 p-4 rounded-xl shadow-md transform hover:scale-110 ease-in-out duration-300 delay-75">
        <h2 class="text-lg font-bold">{titulo}</h2>
        <img
          src={imagen}
          alt="imagen de los cursos"
          class="max-w-full h-auto object-cover rounded"
        />
        <p class="text-sm font-semibold text-wrap">{descripcion}</p>
        <span class="text-xs">
          {nivel} - {duracion}
        </span>
        <button class="p-2.5 text-sm text-white font-semibold font-mono text-center bg-black rounded-2xl transition hover:bg-white hover:text-black duration-700 ease-in-out">
          ¡Inscríbete aquí!
        </button>
      </div>
    ))
  }
</section>
