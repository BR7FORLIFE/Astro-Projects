---
const { title, description, image } = Astro.props;
---

<section class="flex flex-col text-white">
  <div>
    <h1 class="text-2xl font-mono text-center">{title}</h1>
  </div>

  <div>
    <p class="text-lg font-medium">{description}</p>
  </div>

  <picture class="flex justify-center items-center">
    <img src={image} alt="imagen de presentacion para los cursos" class="object-cover size-72 rounded-full">
  </picture>
</section>
    